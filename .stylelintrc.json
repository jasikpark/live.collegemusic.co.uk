{
    "extends": [
        "stylelint-config-standard"
    ],
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen",
                    "layer"
                ]
            }
        ],
        "media-feature-name-no-unknown": [
            true,
            {
                "ignoreMediaFeatureNames": [
                    "display-mode"
                ]
            }
        ],
        "declaration-colon-newline-after": null,
        "declaration-block-trailing-semicolon": null,
        "no-descending-specificity": null
    }
}