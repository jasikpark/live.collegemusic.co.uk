{% extends "_includes/default.njk" %}

{% block title %}It does work{% endblock %}

{% block content %}
    <div class="rounded-lg framing border">
        <div class="flex justify-between p-4">
            <div class="w-2/3">
                <div class="video-container">
                    <iframe class="rounded-sm" width="853" height="480" src="https://www.youtube-nocookie.com/embed/MCkTebktHVc" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="allowfullscreen"></iframe>
                </div>
            </div>
            <div class="w-1/3">
                <div class="chat-container">
                    <iframe class="rounded-sm" width="480" height="480" referrerpolicy="origin" src="https://www.youtube.com/live_chat?v=MCkTebktHVc&embed_domain={% base_url %}&dark_theme=1" allow="autoplay; encrypted-media" id="chat-embed" frameborder="0"></iframe>
                </div>
            </div>

        </div>
        <div class="flex justify-between p-4">
            <div class="space-y-4" style="min-width: 430px;">
                <div class="flex justify-center items-center now-playing">
                    <h1>Now Playing</h1>
                </div>
                <div class="flex justify-center items-center play-history">
                    <h1>Playing History</h1>
                </div>
            </div>
            <div class="flex justify-center items-center artist-spotlight">
                <h1>Artist Spotlight</h1>
            </div>

        {% endblock %}>